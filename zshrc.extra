# custom functions

function tmux-start {
s_name="tmux-start"
s_exist=$( tmux ls | grep ${s_name} | wc -l )
	if [[ ${s_exist} -eq 1 ]]; then
		tmux -2 a -t ${s_name} 
	else
		tmux -2 -f ~/.tmux.conf new -s ${s_name} -d
		tmux rename-window 'home'
		tmux -2 a -t ${s_name}
	fi
}

