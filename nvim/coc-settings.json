{
  "suggest.enablePreselect": false,
  "suggest.noselect": true,
  "languageserver": {
		"terraform": {
			"command": "terraform-ls",
			"args": ["serve"],
			"filetypes": [
				"terraform",
				"tf"
			],
			"initializationOptions": {},
			"settings": {}
		},
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  },
  "yaml.schemas": {
      "kubernetes": "/*.yaml"
  },
  "python.autoComplete.addBrackets": true
}
